body {
  background-color: #000000;
  color: #818181;
}

.login-view {
  margin-top: 30px;
  width: 60%;
  padding: 40px;
  border-radius: 3px;
  background-color: #161618;
}

.form-label {
  color: #FFFFFF;
}

.form-control {
  border: none;
  background-color: #4e4e4e;
  color: #FFFFFF;
}

.form-control:focus {
  color: #FFFFFF;
  background-color: #818181;
  border: none;
}